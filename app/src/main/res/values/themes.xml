<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
		<item name="android:windowBackground">@drawable/background_splash</item>
	</style>

	<style name="Theme.bgglight" parent="Theme.bgglight.Base">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/accent</item>
		<item name="windowActionModeOverlay">true</item>
		<item name="actionModeBackground">@color/primary</item>
		<item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
		<item name="actionBarPopupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
		<item name="bottomSheetDialogTheme">@style/ModalBottomSheetDialog</item>
 		<item name="android:windowFullscreen">false</item>

		<!-- Explicitly disable edge-to-edge -->
		<item name="android:windowDrawsSystemBarBackgrounds">true</item>
		<item name="android:statusBarColor">@color/primary_dark</item>
		<item name="android:navigationBarColor">@color/primary_dark</item>
		<item name="android:windowTranslucentStatus">false</item>
		<item name="android:windowTranslucentNavigation">false</item>

		<!-- Keep content below system bars -->
		<item name="android:fitsSystemWindows">true</item>
	</style>

	<style name="Theme.bgglight.Base" parent="@style/Theme.MaterialComponents.Light.NoActionBar"/>

	<style name="Theme.bgglight.About">
		<item name="drawerArrowStyle">@style/MyDrawerArrowStyle</item>
		<item name="colorControlNormal">@android:color/white</item>
	</style>

	<style name="MyDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
		<item name="spinBars">false</item>
		<item name="color">@android:color/white</item>
	</style>

	<style name="Theme.bgglight.Dialog" parent="@style/Theme.MaterialComponents.Light.Dialog">
		<item name="android:windowNoTitle">false</item>
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/accent</item>
	</style>

	<style name="Theme.bgglight.Dialog.Alert" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
		<item name="android:windowNoTitle">true</item>
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/accent</item>
		<item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
	</style>

	<style name="Theme.bgglight.Dialog.NoTitle">
		<item name="android:windowNoTitle">true</item>
	</style>

</resources>