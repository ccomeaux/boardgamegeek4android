<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- TextAppearance -->

	<style name="TextAppearance.Basic" parent="@style/TextAppearance.MaterialComponents.Body1">
		<item name="android:textColor">@color/primary_text</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="TextAppearance.Primary" parent="@style/TextAppearance.MaterialComponents.Subtitle1">
		<item name="android:textColor">#000</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="TextAppearance.Secondary" parent="@style/TextAppearance.MaterialComponents.Body2">
		<item name="android:textColor">@color/secondary_text</item>
	</style>

	<style name="TextAppearance.Secondary.Small">
		<item name="android:textSize">12sp</item>
	</style>

	<style name="TextAppearance.Secondary.Inverse">
		<item name="android:textColor">@color/inverse_secondary_text</item>
	</style>

	<style name="TextAppearance.Big" parent="@style/TextAppearance.MaterialComponents.Body1">
		<item name="android:textSize">18sp</item>
	</style>

	<style name="TextAppearance.Huge" parent="@style/TextAppearance.MaterialComponents.Body1">
		<item name="android:textSize">20sp</item>
		<item name="fontFamily">sans-serif-condensed</item>
		<item name="android:fontFamily">sans-serif-condensed</item>
	</style>

	<style name="TextAppearance.Body" parent="TextAppearance.MaterialComponents.Body2" />

	<style name="TextAppearance.Title" parent="@style/TextAppearance.MaterialComponents.Headline6" />

	<style name="TextAppearance.Title.Accent">
		<item name="android:textColor">@color/accent</item>
	</style>

	<style name="TextAppearance.Subtitle" parent="@style/TextAppearance.MaterialComponents.Subtitle1" />

	<style name="TextAppearance.Headline" parent="@style/TextAppearance.MaterialComponents.Headline5" />

	<style name="TextAppearance.Caption.Primary" parent="@style/TextAppearance.MaterialComponents.Caption">
		<item name="android:textColor">@color/primary_text</item>
	</style>

	<style name="TextAppearance.Caption.Secondary" parent="@style/TextAppearance.MaterialComponents.Caption">
		<item name="android:textColor">@color/secondary_text</item>
	</style>

	<style name="TextAppearance.RowTitle" parent="TextAppearance.MaterialComponents.Subtitle1">
		<item name="fontWeight">500</item>
	</style>

	<style name="TextAppearance.RowDetail" parent="TextAppearance.MaterialComponents.Caption">
		<item name="android:textColor">@color/primary_text</item>
	</style>

	<style name="TextAppearance.RowDetail.Bold">
		<item name="fontWeight">600</item>
	</style>

	<style name="TextAppearance.RowDetail.Secondary">
		<item name="android:textColor">@color/secondary_text</item>
	</style>

	<style name="TextAppearance.RowDetail.Bold.Secondary">
		<item name="android:textColor">@color/secondary_text</item>
	</style>

	<style name="TextAppearance.Empty" parent="@style/TextAppearance.MaterialComponents.Subtitle1">
		<item name="android:textColor">@color/secondary_text</item>
	</style>

	<style name="TextAppearance.Dialog" parent="@style/TextAppearance.MaterialComponents.Body1">>
		<item name="android:textColor">@color/dialog_text</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="TextAppearance.Dialog.Header">
		<item name="android:textSize">18sp</item>
	</style>

	<style name="TextAppearance.Pad" parent="@style/TextAppearance.MaterialComponents.Body1">
		<item name="android:textSize">34sp</item>
		<item name="android:textColor">#888</item>
		<item name="android:fontFamily">sans-serif-light</item>
	</style>

	<style name="TextAppearance.Readout" parent="@style/TextAppearance.MaterialComponents.Body1">
		<item name="android:textSize">45sp</item>
	</style>

	<style name="TextAppearance.Title.Overlay">
		<item name="android:textColor">#fff</item>
		<item name="android:shadowColor">#000</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">3</item>
	</style>

	<style name="TextAppearance.Subtitle.Overlay">
		<item name="android:textColor">#fff</item>
		<item name="android:shadowColor">#000</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">2</item>
		<item name="android:textStyle">bold</item>
	</style>

	<!-- Dialog -->

	<style name="DialogSectionHeader">
		<item name="android:minHeight">64dp</item>
		<item name="android:gravity">bottom</item>
		<item name="android:paddingBottom">8dp</item>
		<item name="android:textAppearance">@style/TextAppearance.Title.Accent</item>
	</style>

	<style name="DialogCheckbox">
		<item name="android:minHeight">?attr/listPreferredItemHeightSmall</item>
		<item name="android:textSize">18sp</item>
		<item name="android:paddingLeft">8dp</item>
		<item name="android:textColor">?attr/textColorAlertDialogListItem</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:ellipsize">end</item>
	</style>

	<style name="DialogSpinner">
		<item name="android:minHeight">?attr/listPreferredItemHeightSmall</item>
		<item name="android:gravity">center_vertical</item>
	</style>

	<style name="DialogRadioButton">
		<item name="android:minHeight">?attr/listPreferredItemHeightSmall</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:background">?attr/selectableItemBackground</item>
	</style>

	<style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
		<item name="android:textSize">20sp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<!-- Buttons -->

	<style name="ColoredButton" parent="Widget.MaterialComponents.Button" />

	<style name="ColoredIconButton" parent="Widget.MaterialComponents.Button.Icon" />

	<style name="ColoredButton.Small">
		<item name="android:minHeight">32dp</item>
		<item name="android:textSize">12sp</item>
	</style>

	<style name="FormButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
		<item name="iconPadding">0dp</item>
		<item name="android:insetTop">0dp</item>
		<item name="android:insetBottom">0dp</item>
		<item name="android:paddingLeft">12dp</item>
		<item name="android:paddingRight">12dp</item>
		<item name="android:minWidth">48dp</item>
		<item name="android:minHeight">48dp</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:scaleType">centerInside</item>
	</style>

	<style name="NumPad">
		<item name="android:minWidth">@dimen/pad_button_size</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">@dimen/pad_button_size</item>
		<item name="android:layout_weight">1</item>
		<item name="android:background">?attr/selectableItemBackground</item>
		<item name="android:gravity">center</item>
		<item name="android:textAppearance">@style/TextAppearance.Pad</item>
	</style>

	<!-- Drawer -->

	<style name="DrawerHeaderImage">
		<item name="android:height">@dimen/drawer_header_image_size</item>
		<item name="android:width">@dimen/drawer_header_image_size</item>
	</style>

	<!-- Row -->

	<style name="RowContainer">
		<item name="android:gravity">center</item>
		<item name="android:minHeight">48dp</item>
		<item name="android:paddingBottom">@dimen/material_margin_vertical</item>
		<item name="android:paddingLeft">@dimen/material_margin_horizontal</item>
		<item name="android:paddingRight">@dimen/material_margin_horizontal</item>
		<item name="android:paddingTop">@dimen/material_margin_vertical</item>
	</style>

	<style name="RowContainer.WithThumbnail">
		<item name="android:paddingLeft">@dimen/material_margin_horizontal_thumbnail</item>
	</style>

	<style name="RowContainer.Medium">
		<item name="android:minHeight">56dp</item>
	</style>

	<style name="RowContainer.Tall">
		<item name="android:minHeight">72dp</item>
	</style>

	<style name="RowContainer.VeryTall">
		<item name="android:minHeight">88dp</item>
	</style>

	<style name="RowContainer.VeryTall.WithThumbnail">
		<item name="android:paddingLeft">@dimen/material_margin_horizontal_thumbnail</item>
	</style>

	<style name="RowSeparator" parent="@style/TextAppearance.MaterialComponents.Subtitle2">
		<item name="android:background">@color/light_blue</item>
		<item name="android:gravity">center</item>
		<item name="android:minHeight">@dimen/recycler_section_header_height</item>
		<item name="android:paddingLeft">@dimen/material_margin_horizontal</item>
		<item name="android:paddingRight">@dimen/material_margin_horizontal</item>
		<item name="android:textAllCaps">false</item>
	</style>

	<style name="RowRank">
		<item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
		<item name="android:gravity">end|center_vertical</item>
		<item name="android:minWidth">40dp</item>
		<item name="android:paddingRight">@dimen/padding_extra</item>
	</style>

	<style name="ImageList">
		<item name="android:layout_marginRight">@dimen/padding_standard</item>
		<item name="android:scaleType">centerCrop</item>
	</style>

	<!-- ActionBar -->

	<style name="ActionBar">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">?attr/colorPrimary</item>
		<item name="android:minHeight">?attr/actionBarSize</item>
		<item name="android:theme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
		<item name="actionBarPopupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
		<item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
	</style>

	<style name="BottomActionBar" parent="Widget.MaterialComponents.BottomAppBar">
		<item name="android:theme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
		<item name="actionBarPopupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
		<item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
	</style>

	<style name="ActionBarButtonContainer">
		<item name="android:divider">?android:attr/dividerVertical</item>
		<item name="android:dividerPadding">12dp</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:showDividers">middle</item>
	</style>

	<style name="ActionBarButton" parent="android:style/Widget.Holo.Light.ActionButton">
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:focusable">true</item>
		<item name="android:orientation">horizontal</item>
	</style>

	<style name="ActionBarButtonImage">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:padding">4dp</item>
	</style>

	<style name="ActionBarButtonText">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:textAppearance">?android:attr/actionMenuTextAppearance</item>
		<item name="android:textColor">#fff</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">none</item>
		<item name="android:padding">4dp</item>
	</style>

	<style name="ActionBarSpinner" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
		<item name="android:minHeight">48dp</item>
		<item name="android:minWidth">132dp</item>
	</style>

	<style name="Toolbar">
		<item name="android:theme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
		<item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
	</style>

	<!-- Rating -->

	<style name="RatingLarge">
		<item name="android:textAppearance">@style/TextAppearance.Subtitle</item>
		<item name="android:paddingBottom">@dimen/padding_half</item>
		<item name="android:paddingLeft">@dimen/padding_extra</item>
		<item name="android:paddingRight">@dimen/padding_extra</item>
		<item name="android:paddingTop">@dimen/padding_half</item>
	</style>

	<style name="RatingSmall">
		<item name="android:paddingBottom">@dimen/padding_small</item>
		<item name="android:paddingLeft">@dimen/padding_half</item>
		<item name="android:paddingRight">@dimen/padding_half</item>
		<item name="android:paddingTop">@dimen/padding_small</item>
		<item name="android:minWidth">64dp</item>
		<item name="android:lines">1</item>
	</style>

	<!-- Forms -->

	<style name="FormContainer">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">vertical</item>
		<item name="android:paddingBottom">@dimen/padding_small</item>
		<item name="android:paddingLeft">@dimen/material_margin_horizontal</item>
		<item name="android:paddingRight">@dimen/material_margin_horizontal</item>
		<item name="android:paddingTop">@dimen/padding_standard</item>
	</style>

	<style name="LoginFormContainer">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">16dp</item>
	</style>

	<style name="FormRow">
		<item name="android:paddingLeft">@dimen/material_margin_horizontal</item>
		<item name="android:paddingRight">@dimen/material_margin_horizontal</item>
		<item name="android:minHeight">48dp</item>
		<item name="android:baselineAligned">true</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:layout_gravity">center_vertical</item>
	</style>

	<style name="WebViewContainer">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:background">#fff</item>
		<item name="android:paddingBottom">@dimen/material_margin_vertical</item>
		<item name="android:paddingLeft">@dimen/material_margin_horizontal_webview_container</item>
		<item name="android:paddingRight">@dimen/material_margin_horizontal_webview_container</item>
		<item name="android:paddingTop">@dimen/material_margin_vertical</item>
	</style>

	<!-- Card -->

	<style name="Card">
		<item name="android:layout_marginBottom">@dimen/material_margin_vertical_card</item>
		<item name="android:layout_marginLeft">@dimen/material_margin_horizontal_card</item>
		<item name="android:layout_marginRight">@dimen/material_margin_horizontal_card</item>
		<item name="android:layout_marginTop">@dimen/material_margin_vertical_card</item>
		<item name="cardElevation">2dp</item>
		<item name="cardUseCompatPadding">true</item>
		<item name="contentPaddingBottom">@dimen/material_margin_vertical_card_contents</item>
		<item name="contentPaddingLeft">@dimen/material_margin_horizontal_card_contents</item>
		<item name="contentPaddingRight">@dimen/material_margin_horizontal_card_contents</item>
		<item name="contentPaddingTop">@dimen/material_margin_vertical_card_contents</item>
	</style>

	<style name="Card.NoPadding">
		<item name="contentPaddingBottom">0dp</item>
		<item name="contentPaddingLeft">0dp</item>
		<item name="contentPaddingRight">0dp</item>
		<item name="contentPaddingTop">0dp</item>
	</style>

	<style name="CardRow">
		<item name="android:minHeight">48dp</item>
	</style>

	<style name="CardRow.Clickable">
		<item name="android:background">?attr/selectableItemBackground</item>
		<item name="android:clickable">true</item>
		<item name="android:descendantFocusability">blocksDescendants</item>
		<item name="android:focusable">true</item>
	</style>

	<style name="CardRowContent">
		<item name="android:gravity">center_vertical</item>
		<item name="android:minHeight">48dp</item>
		<item name="android:paddingTop">8dp</item>
		<item name="android:paddingBottom">8dp</item>
	</style>

	<style name="CardTitle">
		<item name="android:minHeight">32dp</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:maxLines">1</item>
		<item name="android:textAppearance">@style/TextAppearance.Title.Accent</item>
	</style>

	<style name="CardCheckbox">
		<item name="android:minHeight">?attr/listPreferredItemHeightSmall</item>
		<item name="android:textSize">16sp</item>
		<item name="android:layout_marginLeft">0dp</item>
		<item name="android:layout_marginRight">0dp</item>
	</style>

	<style name="CardSpinner">
		<item name="android:paddingLeft">@dimen/material_margin_horizontal</item>
		<item name="android:paddingRight">@dimen/material_margin_horizontal</item>
		<item name="android:minHeight">?attr/listPreferredItemHeightSmall</item>
		<item name="android:spinnerItemStyle">@style/EditSpinnerItemStyle</item>
		<item name="android:spinnerDropDownItemStyle">@style/EditSpinnerDropDownItemStyle</item>
		<item name="android:layout_marginLeft">0dp</item>
		<item name="android:layout_marginRight">0dp</item>
	</style>

	<style name="EditSpinnerDropDownItemStyle" parent="Base.Widget.AppCompat.DropDownItem.Spinner">
		<item name="android:textSize">14sp</item>
	</style>

	<style name="EditSpinnerItemStyle" parent="Base.Widget.AppCompat.TextView.SpinnerItem">
		<item name="android:textSize">14sp</item>
	</style>

	<!-- Images -->

	<style name="Icon">
		<item name="android:layout_width">32dp</item>
		<item name="android:layout_height">32dp</item>
		<item name="android:padding">4dp</item>
		<item name="android:layout_marginBottom">8dp</item>
		<item name="android:layout_marginLeft">0dp</item>
		<item name="android:layout_marginRight">@dimen/game_row_icon_margin</item>
		<item name="android:layout_marginTop">8dp</item>
		<item name="android:scaleType">centerInside</item>
	</style>

	<style name="Icon.Right">
		<item name="android:layout_marginLeft">0dp</item>
		<item name="android:layout_marginRight">0dp</item>
	</style>

	<!-- Misc -->

	<style name="EmptyMessage">
		<item name="android:gravity">center</item>
		<item name="android:paddingBottom">@dimen/material_margin_vertical</item>
		<item name="android:paddingLeft">@dimen/material_margin_horizontal</item>
		<item name="android:paddingRight">@dimen/material_margin_horizontal</item>
		<item name="android:paddingTop">@dimen/material_margin_vertical</item>
		<item name="android:textAppearance">@style/TextAppearance.Empty</item>
	</style>

	<style name="EmptyContainer">
		<item name="android:gravity">center_horizontal</item>
		<item name="android:paddingBottom">48dp</item>
		<item name="android:paddingLeft">@dimen/material_margin_horizontal</item>
		<item name="android:paddingRight">@dimen/material_margin_horizontal</item>
		<item name="android:paddingTop">48dp</item>
	</style>

	<style name="RecyclerViewVerticalList">
		<item name="android:clipToPadding">false</item>
		<item name="android:paddingBottom">@dimen/padding_standard</item>
		<item name="android:paddingTop">@dimen/padding_standard</item>
		<item name="android:scrollbars">vertical</item>
	</style>

	<style name="RecyclerViewVerticalList.StickyHeader">
		<item name="android:paddingTop">0dp</item>
	</style>

	<style name="RecyclerViewVerticalList.StickyHeader.FastScroll">
		<item name="fastScrollEnabled">true</item>
		<item name="fastScrollHorizontalThumbDrawable">@drawable/fast_scroll_thumb</item>
		<item name="fastScrollHorizontalTrackDrawable">@color/fast_scroll_track</item>
		<item name="fastScrollVerticalThumbDrawable">@drawable/fast_scroll_thumb</item>
		<item name="fastScrollVerticalTrackDrawable">@color/fast_scroll_track</item>
	</style>

	<style name="GeekListInfoBar">
		<item name="android:background">@color/info_background</item>
		<item name="android:minHeight">48dp</item>
		<item name="android:paddingBottom">@dimen/material_margin_vertical</item>
		<item name="android:paddingLeft">@dimen/material_margin_horizontal</item>
		<item name="android:paddingRight">@dimen/material_margin_horizontal</item>
		<item name="android:paddingTop">@dimen/material_margin_vertical</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="TextWithImage">
		<item name="android:drawablePadding">8dp</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:maxLines">1</item>
		<item name="android:textAppearance">@style/TextAppearance.Primary</item>
	</style>

	<style name="TextWithImage.Secondary">
		<item name="android:textAppearance">@style/TextAppearance.Caption.Secondary</item>
	</style>

	<style name="InfoText">
		<item name="android:background">?attr/selectableItemBackground</item>
		<item name="android:drawableEnd">@drawable/ic_outline_info_24</item>
		<item name="android:drawablePadding">@dimen/padding_standard</item>
		<item name="android:drawableRight">@drawable/ic_outline_info_24</item>
	</style>

	<style name="StatRow">
		<item name="android:paddingBottom">@dimen/padding_small</item>
		<item name="android:paddingTop">@dimen/padding_small</item>
	</style>

	<style name="FilterChip" parent="Widget.MaterialComponents.Chip.Filter">
		<item name="android:checkable">true</item>
		<item name="checkedIconVisible">true</item>
		<item name="checkedIconTint">@color/primary_dark</item>
		<item name="closeIconVisible">false</item>
	</style>

	<style name="GameRow">
		<item name="android:minHeight">@dimen/game_row_height</item>
		<item name="android:paddingTop">@dimen/padding_half</item>
		<item name="android:paddingBottom">@dimen/padding_half</item>
		<item name="android:paddingLeft">@dimen/material_margin_horizontal</item>
		<item name="android:paddingRight">@dimen/material_margin_horizontal</item>
	</style>

	<style name="GameRow.Clickable">
		<item name="android:background">?attr/selectableItemBackground</item>
		<item name="android:clickable">true</item>
		<item name="android:descendantFocusability">blocksDescendants</item>
		<item name="android:focusable">true</item>
	</style>

	<!-- Bottom Sheet -->

	<style name="ModalBottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
		<!-- Apply attributes here -->
	</style>

	<style name="ModalBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
		<item name="bottomSheetStyle">@style/ModalBottomSheet</item>
	</style>
</resources>
