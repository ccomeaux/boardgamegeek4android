<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/container"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:importantForAutofill="noExcludeDescendants">

	<Button
		android:id="@+id/randomizeAllButton"
		style="@style/Widget.MaterialComponents.Button.OutlinedButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/padding_standard"
		android:layout_marginHorizontal="@dimen/padding_standard"
		android:text="@string/randomize_all"
		app:icon="@drawable/ic_shuffle"
		app:layout_constraintBottom_toTopOf="@+id/recyclerView"
		app:layout_constraintHorizontal_chainStyle="spread"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<Button
		android:id="@+id/randomizeStartButton"
		style="@style/Widget.MaterialComponents.Button.OutlinedButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/padding_standard"
		android:layout_marginHorizontal="@dimen/padding_standard"
		android:text="@string/randomize_start"
		app:icon="@drawable/ic_shuffle"
		app:layout_constraintBottom_toTopOf="@+id/recyclerView"
		app:layout_constraintHorizontal_chainStyle="spread"
		app:layout_constraintStart_toEndOf="@id/randomizeAllButton"
		app:layout_constraintTop_toTopOf="parent" />

	<Button
		android:id="@+id/clearButton"
		style="@style/Widget.MaterialComponents.Button.OutlinedButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/padding_standard"
		android:text="@string/clear"
		app:icon="@drawable/ic_clear"
		app:layout_constraintBottom_toTopOf="@+id/recyclerView"
		app:layout_constraintHorizontal_chainStyle="spread"
		app:layout_constraintStart_toEndOf="@id/randomizeStartButton"
		app:layout_constraintTop_toTopOf="parent" />

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/recyclerView"
		style="@style/RecyclerViewVerticalList"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
		app:layout_constraintBottom_toTopOf="@+id/nextButton"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/randomizeAllButton"
		tools:itemCount="4"
		tools:listitem="@layout/row_new_play_player_sort" />

	<Button
		android:id="@+id/nextButton"
		style="@style/ColoredButton"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/padding_extra"
		android:text="@string/next"
		app:icon="@drawable/ic_arrow_forward"
		app:iconGravity="textStart"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>