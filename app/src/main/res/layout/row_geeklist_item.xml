<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout style="@style/RowContainer.WithThumbnail"
			  xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:background="?android:attr/selectableItemBackground"
			  android:orientation="horizontal">

	<TextView
		android:id="@+id/order"
		style="@style/Text.Title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="right"
		android:minWidth="32dp"
		android:paddingLeft="0dp"
		android:paddingRight="@dimen/padding_standard"
		android:textSize="22sp"
		tools:text="19"/>

	<ImageView
		android:id="@+id/thumbnail"
		style="@style/ImageList"
		android:layout_width="@dimen/thumbnail_size"
		android:layout_height="@dimen/thumbnail_size"
		android:contentDescription="@string/thumbnail"
		android:src="@drawable/thumbnail_image_empty"/>

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:orientation="vertical">

		<TextView
			android:id="@+id/game_name"
			style="@style/Text.Primary"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:maxLines="2"
			tools:text="Puerto Rico"/>

		<TextView
			android:id="@+id/username"
			style="@style/TextWithImage.Secondary"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:drawableLeft="@drawable/ic_user_small"
			tools:text="ccomeaux"/>
	</LinearLayout>
</LinearLayout>