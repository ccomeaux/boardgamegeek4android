<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	style="?attr/materialCardViewElevatedStyle"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_margin="@dimen/padding_small"
	android:background="?attr/selectableItemBackground"
	android:focusable="true"
	app:cardElevation="1dp"
	app:shapeAppearance="@style/ShapeAppearance.App.MediumComponent">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/linearLayout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@color/light_blue_transparent">

		<ImageView
			android:id="@+id/thumbnailView"
			android:layout_width="@dimen/card_width"
			android:layout_height="@dimen/card_width"
			android:contentDescription="@string/thumbnail"
			android:scaleType="centerCrop"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintBottom_toTopOf="@id/nameView"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:srcCompat="@drawable/thumbnail_image_empty" />

		<TextView
			android:id="@+id/badgeView"
			style="@style/RatingNarrow"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="end|center_vertical"
			android:layout_marginStart="@dimen/padding_standard"
			android:layout_marginLeft="@dimen/padding_standard"
			android:gravity="center_horizontal"
			android:textAppearance="@style/TextAppearance.RowDetail.Bold"
			app:layout_constraintBottom_toBottomOf="@id/thumbnailView"
			app:layout_constraintEnd_toEndOf="@id/thumbnailView"
			tools:background="#0f0"
			tools:text="9.8" />

		<TextView
			android:id="@+id/nameView"
			style="@style/TextAppearance.Subtitle.Condensed"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginHorizontal="@dimen/padding_half"
			android:ellipsize="end"
			android:lines="2"
			android:paddingTop="@dimen/padding_half"
			app:layout_constraintBottom_toTopOf="@id/yearView"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/thumbnailView"
			tools:text="Gaia Project" />

		<TextView
			android:id="@+id/yearView"
			style="@style/TextAppearance.Caption.Secondary"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginHorizontal="4dp"
			android:layout_marginVertical="@dimen/padding_half"
			android:textColor="@color/secondary_text"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/nameView"
			tools:text="2024" />

		<ImageView
			android:id="@+id/moreButton"
			android:layout_width="48dp"
			android:layout_height="0dp"
			android:background="?attr/selectableItemBackgroundBorderless"
			android:contentDescription="@string/more"
			android:minHeight="48dp"
			android:paddingStart="24dp"
			android:scaleType="centerInside"
			android:src="@drawable/ic_baseline_more_vert_24"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="@id/yearView" />
	</androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>