<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:id="@+id/containerView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:animateLayoutChanges="true"
		android:orientation="vertical"
		android:paddingLeft="@dimen/material_margin_horizontal"
		android:paddingTop="@dimen/material_margin_vertical"
		android:paddingRight="@dimen/material_margin_horizontal"
		android:paddingBottom="@dimen/material_margin_vertical"
		tools:context=".ui.SyncActivity">

		<com.google.android.material.switchmaterial.SwitchMaterial
			android:id="@+id/syncPlaysSwitch"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/sync_plays" />

		<TextView
			android:id="@+id/playSyncStatusView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="@dimen/padding_standard"
			android:visibility="gone"
			tools:text="Plays synced through September 1"
			tools:visibility="visible" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:orientation="horizontal"
			android:paddingVertical="@dimen/padding_standard">

			<Button
				android:id="@+id/cancelPlaysButton"
				style="?attr/materialButtonOutlinedStyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/cancel" />

			<Space
				android:layout_width="@dimen/padding_extra"
				android:layout_height="match_parent" />

			<Button
				android:id="@+id/syncPlaysButton"
				style="@style/Widget.MaterialComponents.Button.Icon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/sync_plays"
				app:icon="@drawable/ic_baseline_sync_24" />
		</LinearLayout>

		<TextView
			android:id="@+id/syncPlaysStep"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingVertical="@dimen/padding_half"
			android:visibility="gone"
			tools:text="Syncing newest plays (page 2)"
			tools:visibility="visible" />

		<TextView
			android:id="@+id/syncPlaysDateRange"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingVertical="@dimen/padding_half"
			android:visibility="gone"
			tools:text="Syncing plays since September 1"
			tools:visibility="visible" />

		<TextView
			android:id="@+id/syncPlaysAction"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingVertical="@dimen/padding_half"
			android:visibility="gone"
			tools:text="Downloading"
			tools:visibility="visible" />

		<com.google.android.material.progressindicator.LinearProgressIndicator
			android:id="@+id/progressBar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:indeterminate="true"
			android:visibility="gone"
			tools:visibility="visible" />

		<View
			android:id="@+id/dividerView"
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_marginVertical="@dimen/padding_extra"
			android:background="@color/list_divider" />

		<TextView
			android:id="@+id/syncPlaysUpdate"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingVertical="@dimen/padding_half"
			android:visibility="gone"
			tools:text="2 plays pending upload"
			tools:visibility="visible" />

		<TextView
			android:id="@+id/syncPlaysDelete"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingVertical="@dimen/padding_half"
			android:visibility="gone"
			tools:text="2 plays pending deletion"
			tools:visibility="visible" />

		<Button
			android:id="@+id/uploadPlaysButton"
			style="@style/Widget.MaterialComponents.Button.Icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:enabled="false"
			android:layout_gravity="center_horizontal"
			android:text="@string/upload_plays"
			app:icon="@drawable/ic_upload_24" />
	</LinearLayout>
</ScrollView>
