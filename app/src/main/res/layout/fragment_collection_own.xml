<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:fillViewport="true">

	<LinearLayout
		android:id="@id/container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:animateLayoutChanges="true"
		android:orientation="vertical"
		android:paddingBottom="@dimen/padding_extra">

		<TextView
			android:id="@+id/growthRateView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginHorizontal="@dimen/material_margin_horizontal"
			android:layout_marginTop="@dimen/padding_extra"
			android:textAppearance="@style/TextAppearance.Primary"
			tools:text="You have 42 games." />

		<TextView
			android:id="@+id/utilizationView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginHorizontal="@dimen/material_margin_horizontal"
			android:layout_marginTop="@dimen/padding_half"
			android:textAppearance="@style/TextAppearance.Primary"
			tools:text="You've utilized 33% of your collection." />

		<com.boardgamegeek.ui.widget.CollectionShelf
			android:id="@+id/gamesWidget"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:headerLabel="@string/title_owned_games" />

		<com.boardgamegeek.ui.widget.CollectionShelf
			android:id="@+id/expansionsWidget"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:headerLabel="@string/title_owned_expansions" />

		<com.boardgamegeek.ui.widget.CollectionShelf
			android:id="@+id/accessoriesWidget"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:headerLabel="@string/title_owned_accessories" />

		<com.boardgamegeek.ui.widget.CollectionShelf
			android:id="@+id/recentlyAcquiredWidget"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:headerLabel="@string/title_recently_acquired"
			app:helpText="@string/info_recently_acquired" />

		<com.boardgamegeek.ui.widget.CollectionShelf
			android:id="@+id/hawtWidget"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:headerLabel="@string/title_hawt"
			app:helpText="@string/info_hawt" />
	</LinearLayout>
</ScrollView>
