<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/linearLayout"
	style="@style/RowContainer"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="?android:attr/selectableItemBackground"
	tools:ignore="Overdraw">

	<com.google.android.material.imageview.ShapeableImageView
		android:id="@+id/avatarView"
		style="@style/ImageList"
		android:layout_width="@dimen/thumbnail_list_size_small"
		android:layout_height="@dimen/thumbnail_list_size_small"
		android:clickable="false"
		android:contentDescription="@string/avatar"
		android:src="@drawable/person_image_empty"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:shapeAppearanceOverlay="@style/circleImageView"
		app:strokeWidth="1dp" />

	<TextView
		android:id="@+id/nameView"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/padding_extra"
		android:layout_marginLeft="@dimen/padding_extra"
		android:ellipsize="end"
		android:maxLines="1"
		android:textAppearance="@style/TextAppearance.RowTitle"
		app:layout_constraintBottom_toTopOf="@+id/descriptionView"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/avatarView"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_chainStyle="packed"
		tools:text="@tools:sample/lorem" />

	<TextView
		android:id="@+id/descriptionView"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:ellipsize="end"
		android:maxLines="2"
		android:textAppearance="@style/TextAppearance.RowDetail.Secondary"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="@+id/nameView"
		app:layout_constraintTop_toBottomOf="@+id/nameView"
		tools:text="@tools:sample/lorem/random" />
</androidx.constraintlayout.widget.ConstraintLayout>