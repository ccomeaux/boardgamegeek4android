<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:importantForAutofill="noExcludeDescendants"
	android:orientation="vertical">

	<LinearLayout
		android:id="@+id/headerView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingHorizontal="@dimen/padding_extra"
		android:paddingVertical="@dimen/padding_standard">

		<TextView
			android:id="@+id/titleView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:maxLines="1"
			android:textAppearance="@style/TextAppearance.Title"
			tools:text="Comment" />

		<TextView
			android:id="@+id/subtitleView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:maxLines="1"
			android:textAppearance="@style/TextAppearance.Subtitle"
			android:visibility="gone"
			tools:text="Terra Mystica"
			tools:visibility="visible" />
	</LinearLayout>

	<com.google.android.material.textfield.TextInputLayout
		android:id="@+id/editTextContainer"
		style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="@dimen/material_margin_horizontal"
		android:layout_marginVertical="@dimen/material_margin_vertical"
		tools:hint="Label name">

		<com.google.android.material.textfield.TextInputEditText
			android:id="@+id/editText"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:imeOptions="actionDone"
			android:inputType="text" />
	</com.google.android.material.textfield.TextInputLayout>
</LinearLayout>