<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:animateLayoutChanges="true"
		android:orientation="vertical">

		<com.boardgamegeek.ui.widget.CollectionShelf
			android:id="@+id/wantToPlayWidget"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:headerLabel="@string/collection_status_want_to_play" />

		<com.boardgamegeek.ui.widget.CollectionShelf
			android:id="@+id/recentlyPlayedWidget"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:headerLabel="@string/title_recently_played" />

		<com.boardgamegeek.ui.widget.CollectionShelf
			android:id="@+id/shelfOfOpportunityWidget"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:headerLabel="@string/title_shelf_of_opportunity"
			app:helpText="@string/info_shelf_of_opportunity" />

		<com.boardgamegeek.ui.widget.CollectionShelf
			android:id="@+id/shelfOfNewOpportunityWidget"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:headerLabel="@string/title_shelf_of_new_opportunity"
			app:helpText="@string/info_shelf_of_new_opportunity" />
	</LinearLayout>
</ScrollView>
