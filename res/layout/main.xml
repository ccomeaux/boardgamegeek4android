<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:gravity="center"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<ImageView android:id="@+id/logo" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:src="@drawable/bgg_logo" />
	<TextView android:id="@+id/title" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="center_horizontal"
		android:text="@string/title_text" android:textAppearance="?android:attr/textAppearanceLarge" />
</LinearLayout>